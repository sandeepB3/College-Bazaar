<% layout('layouts/boilerplate') %>
<br />
<link rel="stylesheet" href="./css/deets.css">
<script src="./scripts/userDeets.js"></script>

<div class="container mt-5">
    <div class="row d-flex justify-content-center align-items-center">
        <div class="col-md-8">
            <form id="regForm" action="/allDeets/?_method=PUT" method="post">
                <h1 id="register">User Details</h1>
                <div class="all-steps" id="all-steps"> 
                  <span class="step"><i class="fa fa-user"></i></span> 
                  <span class="step"><i class="fa fa-map-marker"></i></span>
                  <span class="step"><i class="fa fa-school"></i></span>
                  <span class="step"><i class="fa fa-mobile-phone"></i></span>
                </div>

                <div class="tab">
                  <h6>About You</h6>
                    <p>
                      <input placeholder="About you..." oninput="this.className = ''" name="about" autocomplete="off"></p>
                      <a href="/"><button class="btn btn-outline-primary btn-sm text-center">Save & Fill Later</button></a>
                </div>

                <div class="tab">
                  <h6>Residing City</h6>
                    <p><input placeholder="City" oninput="this.className = ''" name="city" autocomplete="off"></p>
                    <a href="/"><button class="btn btn-outline-primary btn-sm text-center">Save & Fill Later</button></a>
                </div>

                <div class="tab">
                    <h6>College Name</h6>
                      <p><input placeholder="College" oninput="this.className = ''" name="college" autocomplete="off"></p>
                      <a href="/"><button class="btn btn-outline-primary btn-sm text-center">Save & Fill Later</button></a>
                  </div>

                <div class="tab">
                    <h6>Phone Number</h6>
                    <p><input placeholder="Phone Number" oninput="this.className = ''" name="phone" autocomplete="off"></p>
                </div>

                <!-- <div class="text-center">
                  <a href="/"><button class="btn btn-outline-primary btn-sm">Fill Later</button></a>
                </div> -->

                <br />
                <div class="thanks-message text-center" id="text-message"> <img src="https://i.imgur.com/O18mJ1K.png" width="100" class="mb-4">
                    <h3>You are all set!</h3>
                    <button class="hanks-message text-center btn btn-primary" type="submit" name="pub">Let's start</button>
                </div>

                <div style="overflow:auto;" id="nextprevious">
                    <div style="float:right;">
                      <button class="btn-sm" type="button" id="prevBtn" onclick="nextPrev(-1)"><i class="fa fa-angle-double-left"></i></button> 
                      <button class="btn-sm" type="button" id="nextBtn" onclick="nextPrev(1)"><i class="fa fa-angle-double-right"></i></button> </div>
                </div>
            </form>
        </div>
    </div>
</div>